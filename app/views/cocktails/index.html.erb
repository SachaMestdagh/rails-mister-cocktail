<!-- CARDS -->
<div id="card-countainer">
<% @cocktails.each do |cocktail| %>
  <div class="frame">
        <div class="picture"><img src="https://source.unsplash.com/1600x900/?cocktail,<%=cocktail.name%>"></div>
      <div class="namecockt">
       <%= cocktail.name %>
      </div>
      <div class="social show">
        <%= link_to cocktail_path(cocktail) do %>
          <p class="fa fa-eye" id="fa"></p>
        <% end %>
         <%#= link_to 'Show', cocktail_path(cocktail), :class => "fa fa-eye", :id => "fa" %>
      </div>

      <div class="social edit">
        <%= link_to 'Edit', edit_cocktail_path(cocktail), :class => "fa fa-edit", :id => "fa" %>
      </div>

      <div class="social destroy">
        <%= link_to 'Destroy', cocktail_path(cocktail), method: :delete, data: { confirm: 'Are you sure?' }, :class => "fa fa-trash", :id => "fa" %>
      </div>
    </div>
<% end %>
</div>


