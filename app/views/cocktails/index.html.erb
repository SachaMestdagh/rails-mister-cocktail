<!-- NAVBAR -->
<div class= "navbar-themixologist">
  <span class ="navbar-logo">
  <%= image_tag 'logo.png', class: "themixologist-logo", alt: "themixologistlogo" %>
  </span>
  <span class ="navbar-btn">
  <%= link_to 'Add a Cocktail', new_cocktail_path, :class => "btn"  %>
  <%= link_to 'Select an Ingredient', new_cocktail_path, :class => "btn"  %>
  <%= link_to 'The cocktail Roulette', new_cocktail_path, :class => "btn"  %>
  <%= link_to 'Login', new_cocktail_path, :class => "btn"  %>
  <span id ="avatar">
    <%= image_tag 'avatar.jpeg', class: "avatar", alt: "themixologistlogo" %>
  </span>
  <%= link_to 'Sign up', new_cocktail_path, :class => "btn"  %>
  </span>
</div>

<!-- CARDS -->
<div id="card-countainer">
<% @cocktails.each do |cocktail| %>
  <div class="frame">
        <div class="picture"><img src="https://source.unsplash.com/1600x900/?cocktail,<%=cocktail.name%>"></div>
      <div class="namecockt">
       <%= cocktail.name %>
      </div>
      <div class="social show">
         <%= link_to 'Show', cocktail_path(cocktail), :class => "fa fa-eye", :id => "fa" %>
      </div>

      <div class="social edit">
        <%= link_to 'Edit', edit_cocktail_path(cocktail), :class => "fa fa-edit", :id => "fa" %>
      </div>

      <div class="social destroy">
        <%= link_to 'Destroy', cocktail_path(cocktail), method: :delete, data: { confirm: 'Are you sure?' }, :class => "fa fa-trash", :id => "fa" %>
      </div>
    </div>
<% end %>
</div>


