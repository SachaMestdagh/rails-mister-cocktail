
<div class="container">
    <div class="picture"><img src="https://source.unsplash.com/1600x900/?cocktail,<%=@cocktail.name%>"*3></div>
    <h1> Here is what you need to do a <%= @cocktail.name %> ! </h1>
    <table>
      <thead>
        <tr>
          <th>Ingredients</th>
          <th>Doses</th>
        </tr>
      </thead>
      <tbody>
      <% @cocktail.doses.each do |dose| %>
      <tr>
        <td> <%= dose.ingredient.name %> </td>
        <td> <%= dose.description %> </td>
        </tr>
      <% end %>
    </tbody>
    </table>

    <h2>  Mix it up and enjoy! </h2>
  </div>

<%= link_to "Add Ingredients", new_cocktail_dose_path(@cocktail), :class => "btn" %>
<%= link_to "home", cocktails_path(@cocktails), :class => "btn" %>
