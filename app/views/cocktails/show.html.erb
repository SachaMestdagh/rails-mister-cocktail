
<div class="container">
    <div class="image-card">
      <img src="https://source.unsplash.com/1600x900/?cocktail,<%=@cocktail.name%>" class="img">
    </div>
    <h3 class="row justify-content-center"> Here is what you need to do a <%= @cocktail.name %> ! </h3>
    <table align="center" class="tbl">
      <thead>
        <tr>
          <th>Ingredients</th>
          <th>Doses</th>
        </tr>
      </thead>
      <tbody>
      <% @cocktail.doses.each do |dose| %>
      <tr>
        <td> <%= dose.ingredient.name %> </td>
        <td> <%= dose.description %> </td>
        <td><%= link_to edit_dose_path(dose) do %>
          <p class="fa fa-edit" id="edit-icons"></p>
          <% end %>
        </td>
        <td><%= link_to dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' }  do %>
          <p class="fa fa-trash" id="edit-icons"></p>
          <% end %>
        </td>
        </tr>
      <% end %>
    </tbody>
    </table>
  <br>
    <h3 class="row justify-content-center">  Mix it all  up and enjoy! </h3>
    <br>
    <span class="row justify-content-center">
    <%= link_to "Add Ingredients", new_cocktail_dose_path(@cocktail), :class => "btn-show" %>
    <%= link_to "home", cocktails_path(@cocktails), :class => "btn-show" %>
  </span>
    <br>
  </div>


